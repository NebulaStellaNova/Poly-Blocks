<box styleName="block" id="
{ 
    'id': 'moveStrumlineBlock', 
    'type': 'basic', 
    'data': [
        {
            'pointers': ['selectedItem', 'text'],
            'id': 'target'
        },
        {
            'pointers': ['selectedItem', 'text'],
            'id': 'direction'
        },
        {
            'pointers': ['pos'],
            'id': 'amount'
        }
    ]  
}
" style="background-color: #01274d; padding-left: 15px; padding-right: 15px; padding-top: 5px; padding-bottom: 5px; border-radius: 4px; border-style: solid; border-color: #004487; border-size: 1px;">
    <hbox>
        <label text="Move" style="margin-top: 5px;" />
        <dropdown id="target" width="85" style="background-color: #001b36; border-color: #004487;">
            <data>
                <item text="Player"></item>
                <item text="Opponent"></item>
            </data>
        </dropdown>
        <label text="Strumline" style="margin-top: 5px;" />
        <dropdown id="direction" width="85" style="background-color: #001b36; border-color: #004487;">
            <data>
                <item text="Left"></item>
                <item text="Down"></item>
                <item text="Up"></item>
                <item text="Right"></item>
            </data>
        </dropdown>
        <number-stepper id="amount" pos="0" step="1" verticalAlign="center"
            tooltip="ADD ONE LATER????" style="background-color: #001b36; border-color: #004487;" />
        <label text="px" style="margin-top: 5px;" />
    </hbox>
</box>