<box styleName="block" id="
{ 
    'id': 'projectProperties', 
    'type': 'properties', 
    'data': [
        {
            'pointers': ['text'],
            'id': 'name'
        },
        {
            'pointers': ['selectedItem', 'id'],
            'id': 'type'
        }
    ]
}
    " style="background-color: #014d3b; padding-left: 15px; padding-right: 15px; padding-top: 5px; padding-bottom: 5px; border-radius: 4px; border-style: solid; border-color: #016b52; border-size: 1px;">
    <vbox>
        <label text="Project Data"></label>
        <box width="100" height="1"
            style="background-color: #FFFFFF; opacity: 0.5; margin-top: -2" />
        <hbox> 
            <label text="Project Name:" style="margin-top: 4px;" />
            <textfield id="name" width="230" style="background-color: #013629; border-color: #016b52;" restrictChars="0-9A-Za-z "/>
        </hbox>
        <hbox> 
            <label text="Project Type:" style="margin-top: 4px;" />
            <dropdown id="type" width="230" style="background-color: #013629; border-color: #016b52;">
                <data>
                    <item text="Module" id="module"></item>
                    <item text="Song Event" id="event"></item>
                </data>
            </dropdown>
        </hbox>
    </vbox>
</box>