<box styleName="block" id="{ 'id': 'tweenStrumlineBlock', 'type': 'basic' }"  style="background-color: #01274d; padding-left: 15px; padding-right: 15px; padding-top: 5px; padding-bottom: 5px; border-radius: 4px; border-style: solid; border-color: #004487; border-size: 1px;">
    <vbox>
        <hbox>
            <label text="Tween" style="margin-top: 5px;" />
            <dropdown id="strumline" width="85" style="background-color: #001b36; border-color: #004487;">
                <data>
                    <item text="Player"></item>
                    <item text="Opponent"></item>
                </data>
            </dropdown>
            <label text="Strumline" style="margin-top: 5px;" />
            <dropdown id="direction" width="85" style="background-color: #001b36; border-color: #004487;">
                <data>
                    <item text="Left"></item>
                    <item text="Down"></item>
                    <item text="Up"></item>
                    <item text="Right"></item>
                </data>
            </dropdown>
            <number-stepper id="amount" pos="0" step="1" verticalAlign="center"
                tooltip="ADD ONE LATER????" style="background-color: #001b36; border-color: #004487;" />
            <label text="px" style="margin-top: 5px;" />
        </hbox>
        <hbox>
            <label text="Ease Type:" style="margin-top: 5px;" />
            <dropdown width="85" style="background-color: #001b36; border-color: #004487;">
                <data>
                    <item text="Sine"></item>
                    <item text="Quad"></item>
                </data> 
            </dropdown>
            <label text="Direction" style="margin-top: 5px;" />
            <dropdown width="85" style="background-color: #001b36; border-color: #004487;">
                <data>
                    <item text="In"></item>
                    <item text="Out"></item>
                    <item text="In Out"></item>
                </data>
            </dropdown>
        </hbox>
    </vbox>
</box>