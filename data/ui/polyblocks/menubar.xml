    <menu text="View" width="300">
        <menu-item id="resetCamera" text="Set Zoom to Stage Zoom" shortcutText="Ctrl + Shift + R" />
        <menu-separator />
        <menu-item id="viewFromPlayer" text="View Stage From Player" disabled="false" />
        <menu-item id="viewFromOpponent" text="View Stage From Opponent" disabled="false" />
        <menu-item id="viewFromSpectator" text="View Stage From Spectator" disabled="false" />
        <menu-separator />
        <menucheckbox id="viewPlayerBounds" text=" Show Player Camera Bounds" />
        <menucheckbox id="viewOpponentBounds" text=" Show Opponent Camera Bounds" />
        <menucheckbox id="viewSpectatorBounds" text=" Show Spectator Camera Bounds" />
    </menu>

    <menu text="Audio" width="300">
        <menu text="Editor Music">
            <vbox width="100%">
                <listview id="musicMenu" width="300" height="400" selectedIndex="0">

                </listview>
            </vbox>
        </menu>
        <vbox width="100%" style="padding: 12px;">
            <menu-separator />
            <spacer height="10%" />
            <label id="editorMusicVolume" text="Editor Music - 100%" />
            <slider id="menubarItemVolumeInstrumental" width="100%" majorTicks="10" minorTicks="5"
                pos="100" />
        </vbox>
    </menu>

    <menu text="Help" width="300">
        <menu-item id="userGuide" text="User Guide" shortcutText="F1" />
        <menu-item id="checkForUpdates" text="Check for Updates" shortcutText="(Coming Soon)"
            disabled="true" />
        <menu-item id="redownloadEditor" text="Re-Download Editor" shortcutText="(Coming Soon)"
            disabled="true" />
    </menu>

    <spacer width="100%" />
    <label text="" verticalAlign="center" id="menuBarTitle" />
</menubar>