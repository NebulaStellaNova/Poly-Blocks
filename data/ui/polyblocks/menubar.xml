<?xml version="1.0" encoding="utf-8"?>
<menubar id="menubar" width="100%" height="5%">
    <style>
        .menu {
        // The width of the individual menu items
        width: 120px;
        }
    </style>

    <menu text="File" width="300">
        <menu-item id="newStage" text="New" shortcutText="Ctrl + N"/>
        <menu-separator />
        <menu-item id="saveStage" text="Save" shortcutText="Ctrl + S" />
        <menu-item id="saveStageAs" text="Save As" shortcutText="Ctrl + Shift + S" />
        <menu-item id="saveStageForPsych" text="Save For Psych" shortcutText="(Coming Soon)"
            disabled="true" />
        <menu-item id="saveStageForCNE" text="Save For Codename Engine" shortcutText="(Coming Soon)"
            disabled="true" />
        <menu-separator />
        <menu-item id="deleteStage" text="Delete Stage" style="color: indianred"/>
        <menu-separator />
        <menu-item id="exitToMenu" text="Exit To Menu" shortcutText="Ctrl + Q" />
    </menu>

